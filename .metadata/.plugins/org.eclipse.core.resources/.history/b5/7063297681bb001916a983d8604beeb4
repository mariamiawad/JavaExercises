			   for (int j = 1; j <= (6 - i); j++) {
			    System.out.print("  ");
			   }
			    
			   //Printing number increamentally from 1 to line number j
			   for (int j = 1; j <= i; j++) {
			    System.out.print(j + " ");
			   }
			   System.out.println();
			 
